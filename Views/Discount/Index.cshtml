@model IEnumerable<Discount>

<h2>Manage Discounts</h2>
<a asp-action="Create" class="btn btn-primary">Add Discount</a>
<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Product</th>
            <th>Discount Percent</th>
            <th>Start Time</th>
            <th>End Time</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var discount in Model)
        {
            <tr>
                <td>@discount.Title</td>
                <td>@discount.Product?.ProductName</td>
                <td>@discount.DiscountPercent</td>
                <td>@discount.StartTime</td>
                <td>@discount.EndTime</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@discount.DiscountId" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@discount.DiscountId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
