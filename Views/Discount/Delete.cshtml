@model Discount

<h2>Delete Discount</h2>

<div>
    <h4>Are you sure you want to delete this discount?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Title</dt>
        <dd class="col-sm-10">@Model.Title</dd>
        <dt class="col-sm-2">Product</dt>
        <dd class="col-sm-10">@Model.Product.ProductName</dd>
        <dt class="col-sm-2">Discount Percent</dt>
        <dd class="col-sm-10">@string.Format("{0}%", Model.DiscountPercent * 100)</dd>
        <dt class="col-sm-2">Start Date</dt>
        <dd class="col-sm-10">@Model.StartTime.ToString("MM-dd-yyyy")</dd>
        <dt class="col-sm-2">End Date</dt>
        <dd class="col-sm-10">@Model.EndTime.ToString("MM-dd-yyyy")</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="DiscountId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
